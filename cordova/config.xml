        <icon density="mdpi" src="res/icons/favicon48.png" />
        <icon density="hdpi" src="res/icons/favicon72.png" />
        <icon density="tvdpi" src="res/icons/favicon64.png" />
        <icon density="xhdpi" src="res/icons/favicon96.png" />
        <icon density="xxhdpi" src="res/icons/favicon144.png" />
        <icon density="xxxhdpi" src="res/icons/favicon192.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-local-notification" spec="^0.8.4" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
    <plugin name="cordova-plugin-badge" spec="^0.8.5" />
    <plugin name="yandex-appmetrica-plugin-cordova" spec="^0.1.0" />
    <engine name="ios" spec="^4.5.2" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.1" />
</widget>
