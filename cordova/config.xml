<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.iliago.schoolschedule" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Школьное расписание</name>
    <description>
        Расписание Лицея г. Троицка
    </description>
    <author email="iliakonnov@gmail.com">
        Коннов Илья
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="desktop">
        <icon src="res/icons/favicon.ico" />
    </platform>
    <platform name="ios">
        <icon height="1024" src="res/icons/favicon1024.png" width="1024" />
        <icon height="180" src="res/icons/favicon180.png" width="180" />
        <icon height="167" src="res/icons/favicon167.png" width="167" />
        <icon height="152" src="res/icons/favicon152.png" width="152" />
        <icon height="144" src="res/icons/favicon144.png" width="144" />
