        <icon height="114" src="res/icons/favicon114.png" width="114" />
        <icon height="100" src="res/icons/favicon100.png" width="100" />
        <icon height="87" src="res/icons/favicon87.png" width="87" />
        <icon height="80" src="res/icons/favicon80.png" width="80" />
        <icon height="76" src="res/icons/favicon76.png" width="76" />
        <icon height="72" src="res/icons/favicon72.png" width="72" />
